<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "Koios Note",
  "short_name": "Koios Note",
  "start_url": "/users/sign_in",
  "display": "standalone",
  "background_color": "#fff",
  "theme_color": "#000000",
  "orientation": "portrait",
  "description": "A note taking application for the intellectual titan.", 
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "serviceworker-rails/heart-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>

  ]
}
