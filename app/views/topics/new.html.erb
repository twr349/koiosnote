<h1>Add topic</h1>
<div class="row">
   <div class="col-md-8">
     <%= form_for [@subject, @topic] do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
     <%= link_to "", :back, class: "back glyphicon glyphicon-arrow-left" %>
   </div>
 </div