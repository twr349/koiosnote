<div class="form-submit">
<h1>Add Topic</h1>
<div class="row">
   <div class="col-md-12">
     <%= form_for [@subject, @topic] do |f| %>
       <div class="form-group">
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
     <%= link_to "", :back, class: "btn btn-default glyphicon glyphicon-arrow-left" %>
   </div>
 </div>
</div>