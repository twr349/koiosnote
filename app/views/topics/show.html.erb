<h1><%= @topic.title %><%= link_to "", new_topic_note_path(@topic), class: 'btn btn-default btn-lg glyphicon glyphicon-plus' %></h1>
 <%= link_to "", root_path, class: "btn btn-default glyphicon glyphicon-arrow-left" %>
 <%= link_to "", edit_subject_topic_path, class: 'btn btn-success glyphicon glyphicon-edit' %>
 <%= link_to "", subject_topic_path(@topic), method: :delete, class: 'btn btn-danger glyphicon glyphicon-remove-sign', data: { confirm: 'Are you sure you want to delete this topic?' } %>
 
 <div class="row">
   <div class="col-md-8">
     <% @topic.notes.each do |note| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to note.title, subject_topic_note_path(@topic, note) %>
             <p><%= note.body.split(".").first + '.' %></p>
           </h4>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     
   </div>
 </div>