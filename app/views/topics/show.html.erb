<h1>Topic</h1>
  <%= link_to "", @subject, class: "btn btn-default glyphicon glyphicon-arrow-left" %>   
  <%= link_to "", edit_subject_topic_path(@topic.subject, @topic), class: 'btn btn-success glyphicon glyphicon-edit' %>
  <%= link_to "", [@topic.subject, @topic], method: :delete, class: 'btn btn-danger glyphicon glyphicon-remove-sign', data: {confirm: 'Are you sure you want to delete this topic?'} %>
   
   
<h1><%= @topic.title %></h1>
 
 <div class="row">
   <div class="col-md-12">
     <p><%= @topic.body %></p>
   </div>
   
</div>