<h1>Subjects</h1>
 
 <div class="row">
   <div class="col-md-8">
     <% @subjects.each do |subject| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to subject.name, subject %>
           </h4>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <%= link_to "New Subject", new_subject_path, class: 'btn btn-success' %>
   </div>
 </div>