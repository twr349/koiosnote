<h1><%= @subject.name %></h1>
 <span><%= link_to "Edit Subject", edit_subject_path, class: 'btn btn-success' %></span>
 <%= link_to "Delete Subject", @subject, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this subject?' } %>
 
 <div class="row">
   <div class="col-md-8">
     <% @subject.topics.each do |topic| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to topic.title, subject_topic_path(@subject, topic) %>
           </h4>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <%= link_to "New Topic", new_subject_topic_path(@subject), class: 'btn btn-success' %>
   </div>
 </div>