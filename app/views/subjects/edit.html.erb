<h1>Edit Subject</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @subject do |f| %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter subject name" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>