<div class="note-show">
  <h1><%= @note.title %></h1>
  <%= link_to "", @topic, class: "btn btn-default glyphicon glyphicon-arrow-left" %>   
  <%= link_to "", edit_topic_note_path(@note.topic, @note), class: 'btn btn-success glyphicon glyphicon-edit' %>
  <%= link_to "", [@note.topic, @note], method: :delete, class: 'btn btn-danger glyphicon glyphicon-remove-sign', data: {confirm: 'Are you sure you want to delete this note?'} %>
  <div class="row">
    <div class="col-md-12">
      <h4><%= @note.body %></h4>
    </div>
  </div>
</div>