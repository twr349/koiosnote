<div class="form-submit">
  <h1>Add Note</h1>
  <div class="row">
    <div class="col-md-12">
      <%= form_for [@topic, @note] do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, rows: 2, class: 'form-control textarea autoExpand', placeholder: "Enter note" %>
        </div>
        <div class="form-group">
          <%= f.label "Quick Review" %>
          <%= f.check_box :review %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "", :back, class: "btn btn-default glyphicon glyphicon-arrow-left" %>
    </div>
  </div>
</div>