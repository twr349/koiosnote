<div class="subject-index">
  <div class="row">
    <div class="col-md-8">
      <h1>Add Subjects  <%= link_to "", new_subject_path, class: 'btn btn-default btn-lg glyphicon glyphicon-plus' %></h1>
    </div>
  </div>
  <div class="row subject-row">
  <% @subjects.each do |subject| %>
    <%= link_to(subject) do %>
    <div class="col-md-6">
      <div class="compbook">
        <%= image_tag("compbook2.png", class: "img-fluid") %>
        <div class="centered">
          <h1><%= subject.name %></h1>
        </div>
      </div>
      <% end %>
      <%=link_to "", new_subject_topic_path(subject.id), class: "btn btn-info btn-lg glyphicon glyphicon-pencil" %>
    </div>
  <% end %>
  </div>
</div>
